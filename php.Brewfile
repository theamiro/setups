tap "homebrew/core"

brew "php"
brew "composer"  # Dependency manager for PHP
brew "php-cs-fixer"  # PHP coding standards fixer
brew "mysql"  # MySQL database
brew "nginx"  # NGINX web server
brew "valet"  # Laravel Valet for local dev
brew "redis"  # Redis caching
brew "wp-cli"  # WP-CLI for WordPress management

# Optional: some useful PHP extensions
brew "imagemagick"  # For image manipulation (used in many PHP apps)
brew "mcrypt"  # Encryption (used by some legacy PHP apps)
